<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FADFFB">

    <!-- Text: Local Guardian -->
    <TextView
        android:id="@+id/textLocalGuardian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Local Guardian"
        android:textStyle="bold"
        android:textColor="#FF4081"
        android:textSize="25sp"
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true"/>

    <!-- EditText: Local Guardian Number -->
    <EditText
        android:id="@+id/editLocalGuardianNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textLocalGuardian"
        android:layout_marginTop="10dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:padding="16dp"
        android:hint="Add number here"
        android:backgroundTint="#FF4081"
        android:textColorHint="#FF4081"/>

    <!-- Text: Hospital -->
    <TextView
        android:id="@+id/textHospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hospital"
        android:textColor="#FF4081"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_below="@id/editLocalGuardianNumber"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <!-- EditText: Hospital Number -->
    <EditText
        android:id="@+id/editHospitalNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textHospital"
        android:layout_marginTop="10dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:padding="16dp"
        android:hint="Add number here"
        android:backgroundTint="#FF4081"
        android:textColorHint="#FF4081"/>

    <!-- Button: Save -->
    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editHospitalNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="#FF4081"
        android:text="Save"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

</RelativeLayout>
